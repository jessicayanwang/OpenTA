'use client'

import { useState, useEffect } from 'react'
import { useRouter } from 'next/navigation'

interface QuestionCluster {
  cluster_id: string
  representative_question: string
  similar_questions: string[]
  count: number
  artifact: string | null
  section: string | null
  canonical_answer_id: string | null
  created_at: string
  last_seen: string
}

interface UnresolvedItem {
  item_id: string
  student_question: string
  student_id: string
  artifact: string | null
  section: string | null
  reason: string
  confidence: number | null
  generated_response: string | null
  created_at: string
  resolved: boolean
}

interface ConfusionHeatmapEntry {
  artifact: string
  section: string | null
  confusion_count: number
  unique_students: number
  example_questions: string[]
  last_updated: string
}

interface GuardrailSettings {
  course_id: string
  max_hints: number
  show_thinking_path: boolean
  graded_banner_text: string
  assignment_rubrics: Record<string, string[]>
  updated_by: string
  updated_at: string
}

export default function ProfessorConsole() {
  const router = useRouter()
  const [activeTab, setActiveTab] = useState<'clusters' | 'unresolved' | 'heatmap' | 'guardrails'>('clusters')
  const [clusters, setClusters] = useState<QuestionCluster[]>([])
  const [unresolvedItems, setUnresolvedItems] = useState<UnresolvedItem[]>([])
  const [heatmap, setHeatmap] = useState<ConfusionHeatmapEntry[]>([])
  const [guardrails, setGuardrails] = useState<GuardrailSettings | null>(null)
  const [loading, setLoading] = useState(false)

  useEffect(() => {
    // Check if user is professor
    const role = localStorage.getItem('userRole')
    if (role !== 'professor') {
      router.push('/login')
      return
    }

    loadData()
  }, [activeTab])

  const loadData = async () => {
    setLoading(true)
    try {
      if (activeTab === 'clusters') {
        const res = await fetch('http://localhost:8000/api/professor/clusters?course_id=cs50&min_count=1')
        const data = await res.json()
        setClusters(data)
      } else if (activeTab === 'unresolved') {
        const res = await fetch('http://localhost:8000/api/professor/unresolved?course_id=cs50')
        const data = await res.json()
        setUnresolvedItems(data)
      } else if (activeTab === 'heatmap') {
        const res = await fetch('http://localhost:8000/api/professor/confusion-heatmap?course_id=cs50&days=7')
        const data = await res.json()
        setHeatmap(data)
      } else if (activeTab === 'guardrails') {
        const res = await fetch('http://localhost:8000/api/professor/guardrails?course_id=cs50')
        const data = await res.json()
        setGuardrails(data)
      }
    } catch (error) {
      console.error('Error loading data:', error)
    } finally {
      setLoading(false)
    }
  }

  const updateGuardrails = async (updates: Partial<GuardrailSettings>) => {
    try {
      const res = await fetch('http://localhost:8000/api/professor/guardrails?course_id=cs50&professor_id=prof1', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(updates)
      })
      const data = await res.json()
      setGuardrails(data)
    } catch (error) {
      console.error('Error updating guardrails:', error)
    }
  }

  return (
    <main className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
      <div className="max-w-7xl mx-auto p-6">
        {/* Header */}
        <div className="bg-white rounded-lg shadow-lg p-6 mb-6">
          <div className="flex justify-between items-center">
            <div>
              <h1 className="text-3xl font-bold text-indigo-900 mb-2">
                üë®‚Äçüè´ Professor Console
              </h1>
              <p className="text-gray-600">
                Monitor student questions, create canonical answers, and manage course guardrails
              </p>
            </div>
            <button
              onClick={() => router.push('/login')}
              className="px-4 py-2 text-gray-600 hover:text-gray-800"
            >
              Switch Role
            </button>
          </div>
        </div>

        {/* Tabs */}
        <div className="bg-white rounded-lg shadow-lg mb-6">
          <div className="flex border-b">
            <button
              onClick={() => setActiveTab('clusters')}
              className={`px-6 py-4 font-semibold ${activeTab === 'clusters' ? 'border-b-2 border-indigo-600 text-indigo-600' : 'text-gray-600'}`}
            >
              üìä Common Questions
            </button>
            <button
              onClick={() => setActiveTab('unresolved')}
              className={`px-6 py-4 font-semibold ${activeTab === 'unresolved' ? 'border-b-2 border-indigo-600 text-indigo-600' : 'text-gray-600'}`}
            >
              ‚ö†Ô∏è Unresolved Queue
              {unresolvedItems.length > 0 && (
                <span className="ml-2 bg-red-500 text-white text-xs px-2 py-1 rounded-full">
                  {unresolvedItems.length}
                </span>
              )}
            </button>
            <button
              onClick={() => setActiveTab('heatmap')}
              className={`px-6 py-4 font-semibold ${activeTab === 'heatmap' ? 'border-b-2 border-indigo-600 text-indigo-600' : 'text-gray-600'}`}
            >
              üî• Confusion Heatmap
            </button>
            <button
              onClick={() => setActiveTab('guardrails')}
              className={`px-6 py-4 font-semibold ${activeTab === 'guardrails' ? 'border-b-2 border-indigo-600 text-indigo-600' : 'text-gray-600'}`}
            >
              ‚öôÔ∏è Guardrail Settings
            </button>
          </div>

          <div className="p-6">
            {loading ? (
              <div className="text-center py-12 text-gray-500">Loading...</div>
            ) : (
              <>
                {/* Common Questions Tab */}
                {activeTab === 'clusters' && (
                  <div className="space-y-4">
                    <p className="text-gray-600 mb-4">
                      Click a cluster to create or link a canonical answer
                    </p>
                    {clusters.length === 0 ? (
                      <div className="text-center py-12 text-gray-500">
                        No question clusters yet. Students need to ask questions first.
                      </div>
                    ) : (
                      clusters.map((cluster) => (
                        <div key={cluster.cluster_id} className="bg-gray-50 rounded-lg p-4 border border-gray-200">
                          <div className="flex justify-between items-start mb-2">
                            <div className="flex-1">
                              <div className="flex items-center gap-2 mb-2">
                                <span className="bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded">
                                  {cluster.count} questions
                                </span>
                                {cluster.artifact && (
                                  <span className="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                                    {cluster.artifact}
                                  </span>
                                )}
                                {cluster.section && (
                                  <span className="bg-green-100 text-green-800 text-xs px-2 py-1 rounded">
                                    {cluster.section}
                                  </span>
                                )}
                              </div>
                              <p className="font-semibold text-gray-800 mb-2">
                                {cluster.representative_question}
                              </p>
                              <details className="text-sm text-gray-600">
                                <summary className="cursor-pointer hover:text-gray-800">
                                  View similar questions ({cluster.similar_questions.length})
                                </summary>
                                <ul className="mt-2 ml-4 space-y-1">
                                  {cluster.similar_questions.slice(0, 5).map((q, i) => (
                                    <li key={i} className="list-disc">{q}</li>
                                  ))}
                                </ul>
                              </details>
                            </div>
                            <button className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm">
                              Create Answer
                            </button>
                          </div>
                        </div>
                      ))
                    )}
                  </div>
                )}

                {/* Unresolved Queue Tab */}
                {activeTab === 'unresolved' && (
                  <div className="space-y-4">
                    {unresolvedItems.length === 0 ? (
                      <div className="text-center py-12 text-gray-500">
                        No unresolved items. Great job!
                      </div>
                    ) : (
                      unresolvedItems.map((item) => (
                        <div key={item.item_id} className="bg-yellow-50 rounded-lg p-4 border border-yellow-200">
                          <div className="flex justify-between items-start mb-2">
                            <div className="flex-1">
                              <div className="flex items-center gap-2 mb-2">
                                <span className="bg-yellow-200 text-yellow-900 text-xs px-2 py-1 rounded">
                                  {item.reason.replace('_', ' ')}
                                </span>
                                {item.confidence !== null && (
                                  <span className="bg-red-100 text-red-800 text-xs px-2 py-1 rounded">
                                    {(item.confidence * 100).toFixed(0)}% confidence
                                  </span>
                                )}
                              </div>
                              <p className="font-semibold text-gray-800 mb-2">
                                {item.student_question}
                              </p>
                              {item.generated_response && (
                                <details className="text-sm text-gray-600">
                                  <summary className="cursor-pointer hover:text-gray-800">
                                    View generated response
                                  </summary>
                                  <p className="mt-2 p-2 bg-white rounded">{item.generated_response}</p>
                                </details>
                              )}
                            </div>
                            <button className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm">
                              Resolve
                            </button>
                          </div>
                        </div>
                      ))
                    )}
                  </div>
                )}

                {/* Confusion Heatmap Tab */}
                {activeTab === 'heatmap' && (
                  <div className="space-y-4">
                    {heatmap.length === 0 ? (
                      <div className="text-center py-12 text-gray-500">
                        No confusion signals yet
                      </div>
                    ) : (
                      heatmap.map((entry, i) => (
                        <div key={i} className="bg-red-50 rounded-lg p-4 border border-red-200">
                          <div className="flex justify-between items-start mb-2">
                            <div className="flex-1">
                              <div className="flex items-center gap-2 mb-2">
                                <span className="bg-red-200 text-red-900 text-xs px-2 py-1 rounded">
                                  {entry.confusion_count} signals
                                </span>
                                <span className="bg-orange-100 text-orange-800 text-xs px-2 py-1 rounded">
                                  {entry.unique_students} students
                                </span>
                              </div>
                              <p className="font-semibold text-gray-800 mb-2">
                                {entry.artifact} {entry.section && `- ${entry.section}`}
                              </p>
                              <details className="text-sm text-gray-600">
                                <summary className="cursor-pointer hover:text-gray-800">
                                  Example questions
                                </summary>
                                <ul className="mt-2 ml-4 space-y-1">
                                  {entry.example_questions.map((q, i) => (
                                    <li key={i} className="list-disc">{q}</li>
                                  ))}
                                </ul>
                              </details>
                            </div>
                          </div>
                        </div>
                      ))
                    )}
                  </div>
                )}

                {/* Guardrails Tab */}
                {activeTab === 'guardrails' && guardrails && (
                  <div className="space-y-6">
                    <div className="bg-gray-50 rounded-lg p-4">
                      <label className="block text-sm font-semibold text-gray-700 mb-2">
                        Maximum Hints per Assignment
                      </label>
                      <select
                        value={guardrails.max_hints}
                        onChange={(e) => updateGuardrails({ max_hints: parseInt(e.target.value) })}
                        className="w-full px-4 py-2 border border-gray-300 rounded-lg"
                      >
                        <option value={1}>1 hint</option>
                        <option value={3}>3 hints</option>
                        <option value={5}>5 hints</option>
                      </select>
                    </div>

                    <div className="bg-gray-50 rounded-lg p-4">
                      <label className="flex items-center">
                        <input
                          type="checkbox"
                          checked={guardrails.show_thinking_path}
                          onChange={(e) => updateGuardrails({ show_thinking_path: e.target.checked })}
                          className="mr-2"
                        />
                        <span className="text-sm font-semibold text-gray-700">
                          Show thinking path to students
                        </span>
                      </label>
                    </div>

                    <div className="bg-gray-50 rounded-lg p-4">
                      <label className="block text-sm font-semibold text-gray-700 mb-2">
                        Graded Assignment Banner Text
                      </label>
                      <textarea
                        value={guardrails.graded_banner_text}
                        onChange={(e) => updateGuardrails({ graded_banner_text: e.target.value })}
                        className="w-full px-4 py-2 border border-gray-300 rounded-lg"
                        rows={3}
                      />
                    </div>

                    <div className="text-sm text-gray-500">
                      Last updated by {guardrails.updated_by} at {new Date(guardrails.updated_at).toLocaleString()}
                    </div>
                  </div>
                )}
              </>
            )}
          </div>
        </div>
      </div>
    </main>
  )
}
